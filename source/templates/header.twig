<header class="main-header">
	<div class="main-header__logos">
		<a class="main-header__logo" href="index.html" {% if permalink == "index.html" %}aria-current="page"{% endif %}>
			<img src="img/logo.svg#logo-pic-mobile" alt="Логотип сайта с картинкой"></img>
		</a>
		<a class="main-header__logo main-header__logo--text" href="index.html" {% if permalink == page.path %}aria-current="page"{% endif %}>
			<img src="img/logo.svg#logo-text" alt="Логотип сайта с текстом"></img>
		</a>
	</div>
	<nav class="main-nav main-nav--opened main-nav--nojs {% if permalink == "index.html" %}main-nav--text-invert{% endif %}" >
		<button class="main-nav__toogle" type="button"><span class="visually-hidden">Открыть меню</span></button>
		<ul class="main-nav__list">
			<!-- Цикл и условие -->
			{% for page in pages %}
			<li class="main-nav__item">
				<a class="main-nav__link" href="{{page.path}}"  {% if permalink == page.path %}aria-current="page"{% endif %}>{{page.name}}</a>
			</li>
			{% endfor %}

		</ul>
	</nav>

</header>
